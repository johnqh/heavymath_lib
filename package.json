{
  "name": "@sudobility/heavymath_lib",
  "version": "0.0.10",
  "description": "Business logic library for Heavymath prediction market platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "build:watch": "bunx tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "bunx eslint src --ext .ts,.tsx",
    "lint:fix": "bunx eslint src --ext .ts,.tsx --fix",
    "format": "bunx prettier --write src/**/*.ts",
    "format:check": "bunx prettier --check src/**/*.ts",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": [
    "heavymath",
    "prediction-market",
    "typescript",
    "business-logic",
    "react",
    "react-native"
  ],
  "author": "John Huang",
  "license": "BUSL-1.1",
  "peerDependencies": {
    "@sudobility/auctions_contracts": "^0.1.11",
    "@sudobility/heavymath_contracts": "^0.1.12",
    "@sudobility/heavymath_indexer_client": "^0.0.3",
    "@sudobility/heavymath_types": "^0.0.7",
    "@sudobility/sports_api_client": "^1.0.16",
    "@sudobility/types": "^1.9.51",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sudobility/auctions_contracts": "^0.1.11",
    "@sudobility/heavymath_contracts": "^0.1.12",
    "@sudobility/heavymath_indexer_client": "^0.0.3",
    "@sudobility/heavymath_types": "^0.0.7",
    "@sudobility/sports_api_client": "^1.0.16",
    "@sudobility/types": "^1.9.51",
    "@tanstack/react-query": "^5.90.5",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.3.4",
    "prettier": "^3.6.2",
    "react": "^19.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/heavymath_lib.git"
  }
}
